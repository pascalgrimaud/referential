<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>
    
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql, mariadb"/>

    <!--
        Load data for entity Country in production profile.
    -->
    <changeSet id="20190301154500-1" author="jhipster">
        <loadData
                  file="config/liquibase/data/country.csv"
                  separator=";"
                  tableName="country"
                  context="prod">
            <column name="id" type="numeric"/>
            <column name="name" type="string"/>
            <column name="code_alpha_2" type="string"/>
            <column name="code_alpha_3" type="string"/>
            <column name="continent" type="string"/>
            <column name="indicatif" type="string"/>
            <column name="source" type="string"/>
        </loadData>
    </changeSet>

</databaseChangeLog>
